@model UserEventModel

@{
    ViewData["Title"] = "Create Event";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<form asp-action="@(Model.IsEdit ? "Edit" : "Create")" asp-controller="Event" method="post">

    <div style="background-color:#a7c8ff; min-height:100vh;">
        <div class="container py-4">
            <div class="bg-white p-4 rounded-4 shadow-sm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <h3 class="fw-bold mb-4">Let's get to know your event:</h3>
                <div class="mb-4">
                    <h5 class="fw-semibold mb-3">Event Setup:</h5>
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Status" />
                    <div class="mb-3">
                        <label for="EventName" class="form-label fw-medium">Event Name</label>
                        <input type="text" class="form-control" asp-for="EventName" />
                        <span asp-validation-for="EventName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="EventDescription" class="form-label fw-medium">Event Description</label>
                        <textarea class="form-control" asp-for="EventDescription" rows="3"></textarea>
                        <span asp-validation-for="EventDescription" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="EventDate" class="form-label fw-medium">Actual Event Date</label>
                        <input type="date" class="form-control" asp-for="EventDate" />
                        <span asp-validation-for="EventDate" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="EndDate" class="form-label fw-medium">End Date</label>
                        <input type="date" class="form-control" asp-for="EndDate" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <!-- E Wedding Card Setup Section -->
                <div class="mb-4">
                    <h5 class="fw-semibold mb-3">E Wedding Card Setup</h5>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Groom Name</label>
                        <input type="text" class="form-control" asp-for="GroomName" />
                        <span asp-validation-for="GroomName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Bride Name</label>
                        <input type="text" class="form-control" asp-for="BrideName" />
                        <span asp-validation-for="BrideName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Groom Father Name</label>
                        <input type="text" class="form-control" asp-for="GroomFatherName" />
                        <span asp-validation-for="GroomFatherName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Groom Mother Name</label>
                        <input type="text" class="form-control" asp-for="GroomMotherName" />
                        <span asp-validation-for="GroomMotherName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Bride Father Name</label>
                        <input type="text" class="form-control" asp-for="BrideFatherName" />
                        <span asp-validation-for="BrideFatherName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Bride Mother Name</label>
                        <input type="text" class="form-control" asp-for="BrideMotherName" />
                        <span asp-validation-for="BrideMotherName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Family Wishes</label>
                        <textarea type="text" class="form-control" asp-for="Wishes"></textarea>
                        <span asp-validation-for="Wishes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Venue Name</label>
                        <input type="text" class="form-control" asp-for="LocationName" />
                        <span asp-validation-for="LocationName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Venue Address 1</label>
                        <input type="text" class="form-control" asp-for="Address1" />
                        <span asp-validation-for="Address1" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Venue Address 2</label>
                        <input type="text" class="form-control" asp-for="Address2" />
                        <span asp-validation-for="Address2" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Venue Address 3</label>
                        <input type="text" class="form-control" asp-for="Address3" />
                        <span asp-validation-for="Address3" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Venue Postcode</label>
                        <input type="text" class="form-control" asp-for="Postcode" />
                        <span asp-validation-for="Postcode" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">State</label>
                        <input type="text" class="form-control" asp-for="State" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <h5 class="fw-semibold mb-3">Contact Person:</h5>
                    </div>

                    <table class="table table-bordered" id="contactTable">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Family Role</th>
                                <th>Phone Number</th>
                                <th style="width: 50px;"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @for (int i = 0; i < Model.ContactInformations.Count; i++)
                            {
                                var contact = Model.ContactInformations[i];
                                <tr>
                                    <td>
                                        <input type="hidden" name="ContactInformations[@i].Id" value="@contact.Id" />
                                        <input type="hidden" name="ContactInformations[@i].WeddingCardInformationId" value="@contact.WeddingCardInformationId" />
                                        <input type="text" name="ContactInformations[@i].Name" class="form-control" value="@contact.Name" data-val="true" data-val-required="Name is required." data-val-maxlength="Name cannot exceed 100 characters." data-val-maxlength-max="100" />
                                        <span class="text-danger field-validation-valid" data-valmsg-for="ContactInformations[@i].Name" data-valmsg-replace="true"></span>
                                    </td>
                                    <td>
                                        <input type="text" name="ContactInformations[@i].FamilyRole" class="form-control" value="@contact.FamilyRole" data-val="true" data-val-required="Family role is required." data-val-maxlength="Family role cannot exceed 50 characters." data-val-maxlength-max="50" />
                                        <span class="text-danger field-validation-valid" data-valmsg-for="ContactInformations[@i].FamilyRole" data-valmsg-replace="true"></span>
                                    </td>
                                    <td>
                                        <input type="text" name="ContactInformations[@i].PhoneNumber" class="form-control" value="@contact.PhoneNumber" data-val="true" data-val-required="Phone number is required." />
                                        <span class="text-danger field-validation-valid" data-valmsg-for="ContactInformations[@i].PhoneNumber" data-valmsg-replace="true"></span>
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-danger btn-sm remove-row">X</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <button type="button" id="addRowBtn" class="btn btn-primary mt-3">Add Row</button>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary px-4">Next</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let rowIndex = @(Model.ContactInformations?.Count ?? 0);

        document.getElementById("addRowBtn").addEventListener("click", function () {

            let tableBody = document.querySelector("#contactTable tbody");

            let newRow = document.createElement("tr");

            newRow.innerHTML = `
                <td>
                    <input type="hidden" name="ContactInformations[${rowIndex}].Id" value="0" />
                    <input type="hidden" name="ContactInformations[${rowIndex}].WeddingCardInformationId" value="0" />
                    <input name="ContactInformations[${rowIndex}].Name" class="form-control" data-val="true" data-val-required="Name is required." data-val-maxlength="Name cannot exceed 100 characters." data-val-maxlength-max="100" />
                    <span class="text-danger field-validation-valid" data-valmsg-for="ContactInformations[${rowIndex}].Name" data-valmsg-replace="true"></span>
                </td>
                <td>
                    <input name="ContactInformations[${rowIndex}].FamilyRole" class="form-control" data-val="true" data-val-required="Family role is required." data-val-maxlength="Family role cannot exceed 50 characters." data-val-maxlength-max="50" />
                    <span class="text-danger field-validation-valid" data-valmsg-for="ContactInformations[${rowIndex}].FamilyRole" data-valmsg-replace="true"></span>
                </td>
                <td>
                    <input name="ContactInformations[${rowIndex}].PhoneNumber" class="form-control" data-val="true" data-val-required="Phone number is required." />
                    <span class="text-danger field-validation-valid" data-valmsg-for="ContactInformations[${rowIndex}].PhoneNumber" data-valmsg-replace="true"></span>
                </td>
                <td class="text-center">
                    <button type="button" class="btn btn-danger btn-sm remove-row">X</button>
                </td>
            `;

            tableBody.appendChild(newRow);

            rowIndex++;
        });

        document.addEventListener("click", function (e) {
            if (e.target.classList.contains("remove-row")) {
                e.target.closest("tr").remove();
            }
        });

        flatpickr("#EventDate", {
            enableTime: false,
            altInput: true,
            altFormat: "d/m/Y",
            dateFormat: "Y-m-d"
        });

        flatpickr("#EndDate", {
            enableTime: false,
            altInput: true,
            altFormat: "d/m/Y",
            dateFormat: "Y-m-d"
        });
    </script>

</form>
