@{
    ViewData["Title"] = "Summary";
}

<div style="background-color:#a7c8ff; min-height:100vh;">
    <div class="container py-5 d-flex flex-column align-items-center justify-content-center">
        <div class="bg-white p-4 rounded-4 shadow-sm text-center" style="max-width:700px; width:100%;">
            <h3 class="fw-bold mb-4 text-start">You’re done!</h3>

            <div class="p-3 bg-light rounded-3 text-start mb-4">
                <p class="mb-1 fw-semibold">Summary:</p>
                <p class="mb-0">
                    To summarize, you have <strong>@ViewBag.TotalGuest guests</strong> and <strong>@ViewBag.QuestionCount questions</strong> to ask from the guest.
                    That will amount to <strong>RM0</strong>. Please proceed to the next page to make the payment
                    and start inviting your guests, or save this as a draft.
                </p>
            </div>

            <div class="d-flex justify-content-center gap-2">
                @if (ViewBag.EventStatus == "Completed")
                {
                    <a href="@Url.Action("Dashboard", "Home")" class="btn btn-dark px-4 py-2">
                        Done
                    </a>
                }
                else
                {
                    <form method="post" action="@Url.Action("MakePayment", "Event")" style="display: inline;">
                        <input type="hidden" name="id" value="@ViewBag.EventId" />
                        <button type="submit" class="btn btn-dark px-4 py-2">Make Active</button>
                    </form>
                    <a href="@Url.Action("Dashboard", "Home")"
                       class="btn btn-warning px-4 py-2 text-dark">
                        Draft
                    </a>
                }
            </div>
        </div>
    </div>
</div>
