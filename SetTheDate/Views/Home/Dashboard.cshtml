<body>
    @{
        ViewData["Title"] = "Dashboard";
    }


    <div style="background-color:#a7c8ff; min-height:100vh;">
        <div class="container py-4">
            <div class="bg-white p-4 rounded-4 shadow-sm">
                <!-- Header Row -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="fw-bold mb-0">Hi Sarah,</h1>
                    <a href="@Url.Action("CreateEvent", "Event")" class="btn btn-dark">
                        + Create Event
                    </a>
                </div>

                <!-- Event Summary Boxes -->
                <div class="row text-center mb-5">
                    <div class="col-md-4 mb-3">
                        <div class="p-3 rounded-4 shadow-sm bg-light">
                            <p class="fw-semibold text-decoration-underline mb-1">Draft Event:</p>
                            <h2 class="fw-bold mb-0">2</h2>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="p-3 rounded-4 shadow-sm bg-light">
                            <p class="fw-semibold text-decoration-underline mb-1">Ongoing Event:</p>
                            <h2 class="fw-bold mb-0">1</h2>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="p-3 rounded-4 shadow-sm bg-light">
                            <p class="fw-semibold text-decoration-underline mb-1">Completed Event:</p>
                            <h2 class="fw-bold mb-0">0</h2>
                        </div>
                    </div>
                </div>

                <!-- Available Event Table -->
                <div class="bg-white p-3 rounded-4 shadow-sm">
                    <h5 class="fw-bold mb-3">Available Event:</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered align-middle text-center mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>No</th>
                                    <th>Event Name</th>
                                    <th>Created Date</th>
                                    <th>End Date</th>
                                    <th>Total Guest</th>
                                    <th>Guest Responded</th>
                                    <th>Landing Page</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Sarah & Firdaus</td>
                                    <td>02/01/2025</td>
                                    <td>31/03/2025</td>
                                    <td>500</td>
                                    <td>320</td>
                                    <td><a href="#" class="text-primary text-decoration-none">Click Here</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>