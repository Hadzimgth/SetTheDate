@model DashboardModel

<body>
    @{
        ViewData["Title"] = "Dashboard";
    }


    <div style="background-color:#a7c8ff; min-height:100vh;">
        <div class="container py-4">
            <div class="bg-white p-4 rounded-4 shadow-sm">
                <!-- Header Row -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="fw-bold mb-0">Hi @Model.Name,</h1>
                    <a href="@Url.Action("EventSetup", "Event")" class="btn btn-dark">
                        + Create Event
                    </a>
                </div>

                <!-- Event Summary Boxes -->
                <div class="row text-center mb-5">
                    <div class="col-md-4 mb-3">
                        <div class="p-3 rounded-4 shadow-sm bg-light">
                            <p class="fw-semibold text-decoration-underline mb-1">Draft Event:</p>
                            <h2 class="fw-bold mb-0">@Model.DraftEventCount</h2>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="p-3 rounded-4 shadow-sm bg-light">
                            <p class="fw-semibold text-decoration-underline mb-1">Ongoing Event:</p>
                            <h2 class="fw-bold mb-0">@Model.ActiveEventCount</h2>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="p-3 rounded-4 shadow-sm bg-light">
                            <p class="fw-semibold text-decoration-underline mb-1">Completed Event:</p>
                            <h2 class="fw-bold mb-0">@Model.CompletedEventCount</h2>
                        </div>
                    </div>
                </div>

                <div class="bg-white p-3 rounded-4 shadow-sm">
                    <h5 class="fw-bold mb-3">Available Event:</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered align-middle text-center mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>No</th>
                                    <th>Event Name</th>
                                    <th>Status</th>
                                    <th>Event Date</th>
                                    <th>End Date</th>
                                    <th>Guest Responded</th>
                                    <th>Total Guest</th>
                                    <th>Wedding Card</th>
                                    <th>Summary</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.UserEventModelList == null || Model.UserEventModelList.Count == 0)
                                {
                                <tr>
                                    <td colspan="10" class="text-center text-muted py-3">
                                        No event data available.
                                    </td>
                                </tr>
                                }
                                else
                                {
                                    for (int i = 0; i < Model.UserEventModelList.Count; i++)
                                    {
                                        var item = Model.UserEventModelList[i];
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>@item.EventName</td>
                                            <td>@item.Status</td>
                                            <td>@item.EventDate.ToString("dd/MM/yyyy")</td>
                                            <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                                            <td>@item.GuestResponded</td>
                                            <td>@item.TotalGuest</td>
                                            <td>
                                                <a href="/home/weddingcard?weddingCardId=@item.WeddingCardId" target="_blank" class="btn btn-sm btn-outline-primary">
                                                    Open Wedding Card
                                                </a>
                                            </td>
                                            <td>
                                                @if (item.Status == "Ongoing" || item.Status == "Completed")
                                                {
                                                    <a href="/Event/EventSummary?id=@item.Id" class="btn btn-sm btn-info text-white text-decoration-none">
                                                        View Summary
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="/Event/EventSetup?eventId=@item.Id" class="text-primary text-decoration-none">
                                                    Click Here
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>