@{
    ViewData["Title"] = "Guest Question Setup";
}

<div style="background-color:#a7c8ff; min-height:100vh;">
    <div class="container py-4">
        <div class="bg-white p-4 rounded-4 shadow-sm">
            <h3 class="fw-bold mb-4">What do you need from your guest:</h3>

            <!-- Question Setup Header -->
            <div class="mb-4">
                <h5 class="fw-semibold mb-2">
                    Question Setup:
                    <i class="bi bi-info-circle ms-1" title="Setup the questions you want to ask your guest"></i>
                </h5>
                <p class="text-muted mb-0">
                    Here is where you set up your question to ask the guest.<br />
                    As example, you can ask about the pax, food restriction, or you can even set a predefined
                    answer in case there is a food menu.
                </p>
            </div>

            <!-- Question List -->
            <div class="bg-light p-3 rounded-3 mb-3">
                <input type="text" class="form-control mb-2" value="How many will you bring to the wedding?" />
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="q1" id="q1opt1" />
                    <label class="form-check-label" for="q1opt1">1</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="q1" id="q1opt2" />
                    <label class="form-check-label" for="q1opt2">2</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="q1" id="q1opt3" />
                    <label class="form-check-label" for="q1opt3">3</label>
                </div>
                <div class="form-check">
                    <label class="form-check-label text-primary" style="cursor:pointer;">Add others</label>
                </div>
            </div>

            <div class="bg-light p-3 rounded-3 mb-3">
                <input type="text" class="form-control mb-2" value="Please select from the prefix menu" />
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="q2" id="q2opt1" />
                    <label class="form-check-label" for="q2opt1">Nasi Briyani + Butter Chicken</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="q2" id="q2opt2" />
                    <label class="form-check-label" for="q2opt2">Nasi Briyani + Fried Silver Catfish</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="q2" id="q2opt3" />
                    <label class="form-check-label" for="q2opt3">Plain Rice + Fried Chicken</label>
                </div>
                <div class="form-check">
                    <label class="form-check-label text-primary" style="cursor:pointer;">Add others</label>
                </div>
            </div>

            <div class="bg-light p-3 rounded-3 mb-3">
                <input type="text" class="form-control mb-2" value="Where do I know you from? (To sit you with the same group as our friends)" />
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="q3" id="q3opt1" />
                    <label class="form-check-label" for="q3opt1">High School</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="q3" id="q3opt2" />
                    <label class="form-check-label" for="q3opt2">UTM</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="q3" id="q3opt3" />
                    <label class="form-check-label" for="q3opt3">Work</label>
                </div>
                <div class="form-check">
                    <label class="form-check-label text-primary" style="cursor:pointer;">Add others</label>
                </div>
            </div>

            <!-- Add Question Button -->
            <div class="text-center mt-4">
                <button type="button" class="btn btn-outline-primary w-100 py-2">
                    + Add Questions
                </button>
            </div>
        </div>
    </div>
</div>
